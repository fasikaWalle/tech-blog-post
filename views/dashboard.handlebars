<div class="d-flex justify-content-center create-post">
    <a href="/create" class="btn btn-primary btn-lg">Create Post</a>
</div>
</section>{{#if posts.length}}
<section class="container">
    <h2>Your posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{>post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="">Edit</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/createpost.js"></script>